<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Juego">

    <Button
            android:text="Atacar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/botonAtacar"
            android:onClick="atacante1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.173" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.134"/>
    <TextView
            android:layout_width="235dp"
            android:layout_height="38dp" android:id="@+id/nombreUsuarioL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.239"
            app:layout_constraintEnd_toEndOf="parent" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintHorizontal_bias="0.517"/>
    <TextView
            android:text="Atacante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/AccionText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.245" app:layout_constraintVertical_bias="0.616"/>
    <TextView
            android:text="Monstruo"
            android:layout_width="231dp"
            android:layout_height="42dp" android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.483" app:layout_constraintVertical_bias="0.419"/>
    <Button
            android:text="Curar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/botonCurar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.133"
            android:onClick="curarVida"/>
    <Button
            android:text="Rendirse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/botonRendirse"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.829"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.133"
            android:onClick="rendirse"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="232dp"
            android:layout_height="24dp"
            android:id="@+id/progressBar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.305" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.508"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="234dp"
            android:layout_height="24dp"
            android:id="@+id/progressBar2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499"/>
    <TextView
            android:text="100%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/barraVida1"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.241" app:layout_constraintVertical_bias="0.358"/>
    <TextView
            android:text="100%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/barraVida2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.23" app:layout_constraintVertical_bias="0.553"/>
    <Button
            android:text="Volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/botonVolver"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.269" app:layout_constraintVertical_bias="0.818"
            android:onClick="regresar"/>
    <Button
            android:text="Reiniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/botonReiniciar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.712" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.818" android:onClick="reiniciar"/>
</androidx.constraintlayout.widget.ConstraintLayout>